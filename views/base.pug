html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='style.css')
    title 9-Dates
  body
    if !user 
      .full
        .left
          h1 9-DATES
          h2 Find Your Otherself
          ul
            li You Are Looking for-- Men
            li You Are Looking for-- Women
            li You Are Looking for-- both !!!
          h2.jst Just:
          div
            a(href='/login') Log in
            a(href='#') Sign up
        .right
    else
      .rendu 
        header
          nav
            div
              span all profile
            div
              span logo
            div
              if user 
                .use
                  a.line(href='#') Log out
                  div
                    img.face(src=`img/${user.imageCover}.jpg`, alt='')
              else
                a(href='/login') Login
                a.sign(href='#') sign up
        main
          each user in users
            .card
              img(src=`img/${user.imageCover}.jpg`, alt='me')
              .lower_card
                .card_info
                  div
                    h2=user.name
                    h3=user.place
                  h2=user.age
                .heart
                  svg.icon(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z')